<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.artiffex.lithomat.sistemaweb.businesstier.entity.CostosExtras" table="costos_extras" dynamic-update="true" optimistic-lock="dirty">
		<id name="idCostosExtras">
			<column name="id_costos_extras"/>
			<type name="integer"/>
			<generator class="increment"/>
		</id>
		<property name="nombre">
			<column name="nombre" length="80"/>
			<type name="string"/>
		</property>
		<property name="descripcion">
			<column name="descripcion" length="250"/>
			<type name="string"/>
		</property>
		<property name="precio">
			<column name="precio"/>
			<type name="float"/>
		</property>
		<many-to-one name="tipoPrecio" class="com.artiffex.lithomat.sistemaweb.businesstier.entity.TipoPrecio" fetch="select">
			<column name="id_tipo_precio"/>
		</many-to-one>
		<property name="activo">
			<column name="activo"/>
			<type name="boolean"/>
		</property>
		<!-- relaciones de identidad uno a muchos que esta clase mantiene con otras clases -->
		<set name="costosExtrasDetalle" table="costos_extras_detalle" inverse="true" lazy="true" fetch="select">
			<key>
				<column name="id_costos_extras" not-null="true"/>
			</key>
			<one-to-many class="com.artiffex.lithomat.sistemaweb.businesstier.entity.CostosExtrasDetalle"/>
		</set>
	</class>
</hibernate-mapping>